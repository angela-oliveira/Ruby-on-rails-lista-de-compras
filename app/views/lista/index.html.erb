<div class="container">
<p id="notice"><%= notice %></p>
  <nav>
    <div class="nav-wrapper">
      <div class="brand-logo center">Minhas Listas</div>
    </div>
  </nav>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lista.each do |listum| %>
      <tr>
        <td><%= listum.nome %></td>
        <td class="right-align" >
          <%= link_to '<i class="material-icons">visibility</i>'.html_safe, listum %>
          <%= link_to '<i class="material-icons">edit</i>'.html_safe, edit_listum_path(listum) %>
          <%= link_to '<i class="material-icons">delete</i>'.html_safe, listum, method: :delete, data: { confirm: 'Tem certeza que deseja apagar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
    <%# <%= link_to 'Nova Lista', new_listum_path %>
    
  <a class="btn" href="<%= new_listum_path %>">Nova Lista </a>



</div>
