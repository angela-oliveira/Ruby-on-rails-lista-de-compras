<p id="notice"><%= notice %></p>

<h1>Listas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lista.each do |listum| %>
      <tr>
        <td><%= listum.nome %></td>
        <td><%= link_to 'Detalhes', listum %></td>
        <td><%= link_to 'Editar', edit_listum_path(listum) %></td>
        <td><%= link_to 'Deletar', listum, method: :delete, data: { confirm: 'Tem certeza que deseja apagar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Lista', new_listum_path %>
